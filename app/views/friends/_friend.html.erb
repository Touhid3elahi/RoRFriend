<tr>
  <td scope="row"><%= friend.first_name %></td>
  <td><%= friend.last_name %></td>
  <td><%= friend.email %></td>
  <td><%= friend.phone %></td>
  <td><%= friend.twitter %></td>
  <td >
                <div style="display: inline-block;">
              <%= link_to friend_path(friend), class: "btn btn-info btn-sm" do %>
                <i class="fas fa-eye"></i> 
              <% end %>
            </div>

            <div style="display: inline-block;">
              <%= link_to edit_friend_path(friend), class: "btn btn-primary btn-sm" do %>
                <i class="fas fa-pencil"></i> 
              <% end %>
            </div>

            <div style="display: inline-block;">
              <%= button_to friend_path(friend), method: :delete, data: { confirm: "Are you sure you want to delete this friend?" }, class: "btn btn-danger btn-sm" do %>
                <i class="fas fa-trash"></i> 
              <% end %>
            </div>
        </td>
</div>
</tr>
